<% include partials/header %>
<h1 class="text-center">Add a new Book</h1>
<div class="container" >
  <div class="well well-lg">
    <div class="container">
      <form action="/books" method="POST">
        <div class="form-group">
          <label for="title">Title</label>
          <input type="text" name="book[title]" placeholder="Title">
        </div>
        <div class="form-group">
          <label for="author">Author</label>
          <input type="text" name="book[author]" placeholder="Author">
        </div>
        <div class="form-group">
          <label for="genre">Genre</label>
          <input type="text" name="book[genre]" placeholder="Genre">
        </div>
        <div class="form-group">
          <label for="imageurl">Image</label>
          <input type="text" name="book[imageurl]" placeholder="Image URL">
        </div>
        <div class="form-group">
          <label for="price">Price</label>
          <input type="Number" name="book[price]" placeholder="0">
        </div>
        <div class="form-group">
          <button type="submit" name="button">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>
<% include partials/footer %>
